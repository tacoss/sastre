{
  "name": "sastre",
  "version": "0.2.17",
  "description": "Module confection at its finest.",
  "main": "dist/index.js",
  "files": [
    "dist/*.js",
    "bin/*"
  ],
  "bin": {
    "sastre": "bin/cli"
  },
  "scripts": {
    "dev": "npm run test -- -w",
    "mocha": "_mocha --exit --colors --recursive -bR spec",
    "build": "esbuild --bundle src/index.js --outdir=dist --platform=node --external:fs --external:glob --external:path --external:util",
    "node": "node -r module-alias/register --",
    "start": "npm run node -- example",
    "test": "npm run test:unit --",
    "test:ci": "npm run coverage && npm run report -- -r lcov",
    "test:unit": "npm run mocha -- -r esm 'test/*.test.js'",
    "test:example": "npm run mocha -- -r module-alias/register 'example/**/*.test.js'",
    "test:coverage": "npm run coverage && npm run report",
    "coverage": "nyc --silent -x '**/tests/**' -x '**/*.test.js' -- npm run test:unit",
    "codecov": "codecov --file=coverage/lcov.info -e TRAVIS_NODE_VERSION",
    "report": "nyc report",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tacoss/sastre"
  },
  "bugs": "https://github.com/tacoss/sastre/issues",
  "author": "Alvaro Cabrera <pateketrueke@gmail.com> (https://soypache.co)",
  "license": "MIT",
  "dependencies": {
    "fs-extra": "^10.0.0",
    "glob": "^7.1.2",
    "global-or-local": "^0.1.5",
    "wargs": "^0.9.3"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "codecov": "^3.0.2",
    "dot-prop": ">=4.2.1",
    "esbuild": "^0.12.19",
    "esm": ">=3.1.0",
    "extend": ">=3.0.2",
    "is-svg": ">=4.2.2",
    "js-yaml": ">=3.13.1",
    "json-schema-sequelizer": "^0.22.3",
    "lodash": ">=4.17.13",
    "minimist": ">=0.2.1",
    "mixin-deep": ">=1.3.2",
    "mocha": "^8.1.3",
    "module-alias": "^2.1.0",
    "normalize-url": ">=4.5.1",
    "nyc": "^15.0.0",
    "path-parse": ">=1.0.7",
    "postcss": ">=8.2.10",
    "serialize-javascript": ">=2.1.1",
    "set-value": ">=2.0.1",
    "sqlite3": "^4.2.0",
    "testdouble": "^3.8.2",
    "typescript": "^4.4.2",
    "yargs-parser": ">=13.1.2"
  },
  "peerDependencies": {
    "typescript": "*"
  },
  "_moduleAliases": {
    "@src": "./example/src",
    "@lib": "./dist/index.js"
  }
}
